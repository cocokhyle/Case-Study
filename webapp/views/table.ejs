<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Details</title>
    <style>
      body {
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Arial, sans-serif;
      }
      div {
        width: 40%;
        height: 80%;
        padding: 20px;
        background-color: #f5f5f5;
        border-radius: 15px;
        height: fit-content;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }
      table {
        width: 100%;
        border-collapse: collapse;
        font-family: monospace;
        font-weight: bold;
      }
      th,
      td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        font-weight: bold;
      }
      th {
        background-color: #dad8d8;
      }
      h1 {
        width: 100%;
        text-align: center;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>User Details</h1>
      <table>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
        <% users.forEach((user) => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
        </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
